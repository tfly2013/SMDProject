<p>
  <strong>Email:</strong>
  <%= @member.email %>
</p>

<p>
  <strong>Name:</strong>
  <%= @member.name %>
</p>

<p>
  <strong>Student ID:</strong>
  <%= @member.student_id %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @member.phone %>
</p>
<% if @member == current_member%>
	<p>You Have <strong><%= unread_message_count %></strong> Unread Messages.</p>
	<%= link_to 'View Messages', [current_member, :messages], id: "button" %>
	<%= link_to 'Edit Details', edit_member_path(@member), id: "button" %>
	<%= link_to 'Change Password', change_password_member_path(@member), id: "button" %>	
<% end %>

<h2>Societies </h2>
<table>
	<thead>
	    <tr>	  	      	    
	      <th>Soicety Name</th>
	      <th>Role</th>
	      <th>Website</th>	
	      <th></th>      
	    </tr>
	</thead>
	<tbody>
		<% current_member.joins.each do |join| %>
		<tr>
			<% society = Society.find(join.society_id) %>
			<td><%= link_to society.name, society %></td>
			<td><%= join.role %></td>
			<td><%= link_to society.website, "http://#{society.website}" %></td>
			<td></td>
		</tr>		
		<% end %>
	</tbody>
</table>
