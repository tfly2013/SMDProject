<h1>Listing events</h1>

<div class="show_event">
	<table>
	  <thead>
	    <tr>
	      <th>Name</th>
	      <th>Type</th>
	      <th>Start Date</th>
	      <th>Start Time</th>
	      <th>End Date</th>
	      <th>End time</th>
	      <th>Location</th>
	      <th>Status</th>
	      <th></th>
	      <th></th>
	      <th></th>
	    </tr>
	  </thead>
	
	  <tbody>
	    <% @events.each do |event| %>
	      <tr>
	        <td><%= event.name %></td>
	        <td><%= event.type %></td>
	        <td><%= event.date_begin %></td>
	        <td><%= event.time_begin %></td>
	        <td><%= event.date_end %></td>
	        <td><%= event.time_end %></td>
	        <td><%= event.location %></td>
	        <td><%= event.status %></td>
	        <td><%= link_to 'Show', event %></td>
	        <td><%= link_to 'Edit', edit_event_path(event) %></td>
	        <td><%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
</div>
<br>

<%= link_to 'New Event', new_event_path, id:"button" %>
