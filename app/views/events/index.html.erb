<h1>Listing events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Location</th>
      <th>Webpage</th>
      <th>Condition</th>
      <th>Description</th>
      <th>Status</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.type %></td>
        <td><%= event.date_begin %></td>
        <td><%= event.time_begin %></td>
        <td><%= event.date_end %></td>
        <td><%= event.time_end %></td>
        <td><%= event.location %></td>
        <td><%= event.website %></td>
        <td><%= event.condition %></td>
        <td><%= event.description %></td>
        <td><%= event.status %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path, id:"button" %>
