<h1>Listing events</h1>

<table>
  <thead>
    <tr>
      <th>Society</th>
      <th>Group</th>
      <th>Name</th>
      <th>Type</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Location</th>
      <th>Webpage</th>
      <th>Condition</th>
      <th>Description</th>
      <th>Status</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.societies_id %></td>
        <td><%= event.groups_id %></td>
        <td><%= event.name %></td>
        <td><%= event.type %></td>
        <td><%= event.begin_time %></td>
        <td><%= event.end_time %></td>
        <td><%= event.location %></td>
        <td><%= event.webpage %></td>
        <td><%= event.condition %></td>
        <td><%= event.description %></td>
        <td><%= event.status %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

