<%= form_for @event, :url => events_path, :html => {:multiple =>true} do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :type %><br>
    <%= f.text_field :type %>
  </div>
  <div class="field">
    <%= f.label :begin_time %><br>
    <%= f.datetime_select :begin_time %>
  </div>
  <div class="field">
    <%= f.label :end_time %><br>
    <%= f.datetime_select :end_time %>
  </div>
  <div class="field">
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label :webpage %><br>
    <%= f.text_field :webpage %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  
  <div class="group">
  	  <h3>Share Event With Group:</h3>
	  <%= f.fields_for :groups do |g| %>  
	  	<div class="field">
			<%= g.label :name, "Group name"%><br>
			<%= g.text_field :name %>
		 </div>
		 <div class="field">
		  	<%= g.label :societylist, "Add societies"%><br>
			<%= g.text_field :societylist, class:"society_auto_complete"%>
		</div>
	  <% end -%> 
  </div>
  
  <div class="picture">
	  <h3>Upload Pictures:</h3><br>
	  <%= f.fields_for :pictures do |p| %>  	
	  	<%= p.file_field :picture %> 
	  <% end -%>
  </div> 
  
  <div class="ticket">
  	  <h3>Ticket Details:</h3>
	  <%= f.fields_for :tickets do |t| %>  
	  	<div class="field">
			<%= t.label :total, "Quantity"%><br>
			<%= t.number_field :total %>
		 </div>
		 <div class="field">
		  	<%= t.label :price, "Price"%><br>
			<%= t.number_field :price %>
		</div>
	  <% end -%> 
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
