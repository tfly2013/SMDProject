<h1>
  <%= @event.name %>
</h1>

<ul class="bxslider">
  <li><%= image_tag @event.pictures.first.try(:picture).try(:url, :medium), class: "event_pictures" %></li>	
  <li><%= image_tag @event.pictures.second.try(:picture).try(:url, :medium), class: "event_pictures" %></li>	
  <li><%= image_tag @event.pictures.third.try(:picture).try(:url, :medium), class: "event_pictures" %></li>
</ul>

<p>
  <strong>Type:</strong>
  <%= @event.type %>
</p>

<p>
  <strong>Begin time:</strong>
  <%= @event.date_begin %>
  <%= @event.time_begin %>
</p>

<p>
  <strong>End time:</strong>
  <%= @event.date_end %>
  <%= @event.time_end %>
</p>

<p>
  <strong>Location:</strong>
  <%= @event.location %>
</p>

<p>
  <strong>Website:</strong>
  <%= @event.website %>
</p>

<p>
  <strong>Condition:</strong>
  <%= @event.condition %>
</p>

<p>
  <strong>Description:</strong>
  <%= @event.description %>
</p>

<p>
  <strong>Status:</strong>
  <%= @event.status %>
</p>

<p>
  <strong>Remaining Tickets:</strong>
  <%= @event.ticket.total %>
</p>

<p>
  <strong>Tickets Price:</strong>
  <%= @event.ticket.price %>
</p>

<%= image_tag @event.pictures.first.try(:picture).try(:url, :medium), class: "event_pictures" %>	
<%= image_tag @event.pictures.second.try(:picture).try(:url, :medium), class: "event_pictures" %>	
<%= image_tag @event.pictures.third.try(:picture).try(:url, :medium), class: "event_pictures" %>	


<%= link_to 'New Comment', new_society_event_comment_path(@society, @event) %>
<table>
  <thead>
    <tr>
      <th>Comments</th>
    </tr>
  </thead>

  <tbody>
    <% @events.comments.each do |comment| %>
      <tr>
        <td><%= comment.content %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', [:edit, @society, @event] %> |
<%= link_to 'Back', [@society, :events] %>
