<%= image_tag @event.pictures.first.try(:picture).try(:url, :medium), class: "event_pictures" %>	
<%= image_tag @event.pictures.second.try(:picture).try(:url, :medium), class: "event_pictures" %>	
<%= image_tag @event.pictures.third.try(:picture).try(:url, :medium), class: "event_pictures" %>	


<%= link_to 'New Comment', new_comment_path %>
<table>
  <thead>
    <tr>
      <th>Comments</th>
    </tr>
  </thead>

  <tbody>
    <% @events.comments.each do |comment| %>
      <tr>
        <td><%= comment.content %></td>
      </tr>
    <% end %>
  </tbody>
</table>

